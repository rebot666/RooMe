<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="105dp"
            android:layout_height="115dp" android:id="@+id/relative_grid"
            android:background="@color/SkyBlue"
            android:padding="2dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_service" android:src="@drawable/services" android:layout_centerInParent="true"
                android:padding="20dp"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="txt_name"
                android:id="@+id/txt_name" android:layout_alignParentTop="true" android:layout_centerInParent="true"
                android:textStyle="bold" android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/White"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="txt_desc"
                android:id="@+id/txt_desc" android:layout_alignParentBottom="true"
                android:layout_centerInParent="true" android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/White"/>
    </RelativeLayout>
</LinearLayout>