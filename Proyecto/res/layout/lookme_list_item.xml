<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@color/back_purple">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="110dp"
                      android:layout_weight="1"
                      android:orientation="horizontal"
                      android:id="@+id/layout_left"
                >
            <TextView android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:layout_gravity="center_vertical"
                      android:gravity="right|center_vertical"
                      android:textSize="18dp"
                      android:id="@+id/name_male"
                      android:layout_marginRight="15dp"
                      android:layout_marginLeft="15dp"
                    />

            <RelativeLayout android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:id="@+id/layout_image_female"
                            android:layout_gravity="center"
                            android:gravity="center"
                    >
                <com.todddavies.components.progressbar.ProgressWheel
                        android:id="@+id/percentage_female"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        ProgressWheel:rimColor="#1C5459"
                        ProgressWheel:barLength="60dp"
                        ProgressWheel:barColor="#FE804D"
                        ProgressWheel:barWidth="5dp"
                        ProgressWheel:rimWidth="5dp"

                        />
                <ImageView
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:id="@+id/circle_women"
                        android:padding="10dp"
                        />

            </RelativeLayout>

            <View android:layout_width="fill_parent"
                  android:layout_height="3dp"
                  android:background="@color/dark_indigo"
                  android:layout_gravity="center"
                  android:id="@+id/branch_left"
                  android:visibility="gone"
                    />


        </LinearLayout>

        <View android:layout_width="3dp"
              android:layout_height="fill_parent"
              android:background="@color/dark_indigo"
              android:layout_gravity="center"

                />
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="110dp"
                      android:layout_weight="1"
                      android:gravity="right"
                      android:orientation="horizontal"
                      android:id="@+id/layout_right"
                >

            <View android:layout_width="fill_parent"
                  android:layout_height="3dp"
                  android:background="@color/dark_indigo"
                  android:layout_gravity="center"
                  android:id="@+id/branch_right"
                    />
            <RelativeLayout android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:id="@+id/layout_image_male"
                            android:layout_gravity="center"
                            android:gravity="center"
                    >
                <com.todddavies.components.progressbar.ProgressWheel
                        android:id="@+id/percentage_male"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        ProgressWheel:rimColor="#1C5459"
                        ProgressWheel:barLength="60dp"
                        ProgressWheel:barColor="#FE804D"
                        ProgressWheel:barWidth="5dp"
                        ProgressWheel:rimWidth="5dp" />
                <ImageView
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:id="@+id/circle_male"
                        android:padding="10dp"
                        />
            </RelativeLayout>

            <TextView android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:layout_gravity="center_vertical"
                      android:gravity="left|center_vertical"
                      android:textSize="18dp"
                      android:id="@+id/name_female"
                      android:layout_marginLeft="15dp"
                      android:layout_marginRight="15dp"
                    />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>