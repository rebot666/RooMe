<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#b4c5c5" />
            <corners
                    android:radius="2dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#F0FFFF"
                    android:endColor="#F0FFFF"
                    android:angle="270" />

            <corners
                    android:radius="2dp" />


        </shape>
    </item>
</selector>